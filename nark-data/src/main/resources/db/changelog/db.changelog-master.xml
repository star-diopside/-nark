<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="se-yoshi">
        <createTable tableName="users">
            <column name="username" type="varchar(50)">
                <constraints primaryKey="true" />
            </column>
            <column name="password" type="varchar(500)">
                <constraints nullable="false" />
            </column>
            <column name="enabled" type="boolean">
                <constraints nullable="false" />
            </column>
        </createTable>
        <createTable tableName="authorities">
            <column name="username" type="varchar(50)">
                <constraints primaryKey="true" />
            </column>
            <column name="authority" type="varchar(50)">
                <constraints primaryKey="true" />
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_authorities_users"
            baseTableName="authorities" baseColumnNames="username"
            referencedTableName="users" referencedColumnNames="username" />
    </changeSet>

    <changeSet id="2" author="se-yoshi">
        <createTable tableName="login_users">
            <column name="username" type="varchar(50)">
                <constraints primaryKey="true" />
            </column>
            <column name="login_error_count" type="int">
                <constraints nullable="false" />
            </column>
            <column name="lockout_at" type="timestamp" />
            <column name="last_login_at" type="timestamp" />
            <column name="logout_at" type="timestamp" />
            <column name="created_at" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(50)" />
            <column name="updated_at" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="updated_by" type="varchar(50)" />
            <column name="version" type="int" defaultValueNumeric="0">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="fk_login_users_users"
            baseTableName="login_users" baseColumnNames="username"
            referencedTableName="users" referencedColumnNames="username" />
        <addColumn tableName="users">
            <column name="display_name" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="password_updated_at" type="timestamp" />
            <column name="created_at" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(50)" />
            <column name="updated_at" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="updated_by" type="varchar(50)" />
            <column name="version" type="int" defaultValueNumeric="0">
                <constraints nullable="false" />
            </column>
        </addColumn>
        <addColumn tableName="authorities">
            <column name="created_at" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="created_by" type="varchar(50)" />
            <column name="updated_at" type="timestamp">
                <constraints nullable="false" />
            </column>
            <column name="updated_by" type="varchar(50)" />
            <column name="version" type="int" defaultValueNumeric="0">
                <constraints nullable="false" />
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="3" author="se-yoshi">
        <createTable tableName="spring_session">
            <column name="session_id" type="char(36)">
                <constraints primaryKey="true" />
            </column>
            <column name="creation_time" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="last_access_time" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="max_inactive_interval" type="int">
                <constraints nullable="false" />
            </column>
            <column name="principal_name" type="varchar(100)" />
        </createTable>
        <createIndex tableName="spring_session" indexName="spring_session_ix1">
            <column name="last_access_time" />
        </createIndex>
        <createTable tableName="spring_session_attributes">
            <column name="session_id" type="char(36)">
                <constraints primaryKey="true" />
            </column>
            <column name="attribute_name" type="varchar(200)">
                <constraints primaryKey="true" />
            </column>
            <column name="attribute_bytes" type="blob" />
        </createTable>
        <addForeignKeyConstraint constraintName="spring_session_attributes_fk"
            baseTableName="spring_session_attributes" baseColumnNames="session_id"
            referencedTableName="spring_session" referencedColumnNames="session_id"
            onDelete="CASCADE" />
        <createIndex tableName="spring_session_attributes"
            indexName="spring_session_attributes_ix1">
            <column name="session_id" />
        </createIndex>
    </changeSet>

</databaseChangeLog>
